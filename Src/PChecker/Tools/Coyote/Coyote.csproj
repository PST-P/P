<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>The PChecker command line tool.</Description>
    <AssemblyName>pc</AssemblyName>
    <RootNamespace>PChecker</RootNamespace>
    <ToolCommandName>pc</ToolCommandName>
    <PackageTags>systematic;tester;pchecker</PackageTags>
    <PackAsTool>true</PackAsTool>
    <OutputType>Exe</OutputType>
    <OutputPath>$(PSdkFolder)\Binaries</OutputPath>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Source\Core\Core.csproj" />
  </ItemGroup>
</Project>